{
  "name": "STT Agent",
  "nodes": [
    {
      "parameters": {
        "path": "={{ $webhookUrl.substring($webhookUrl.indexOf('/webhook/') + 9) }}",
        "responseMode": "onReceived",
        "headerData": "={{$headers}}",
        "bodyData": "={{$body}}"
      },
      "name": "Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [
        240,
        300
      ],
      "id": "webhook-trigger",
      "webhookId": "placeholder_webhook_id"
    },
    {
      "parameters": {
        "authentication": "credentials",
        "resource": "file",
        "operation": "getFile",
        "fileId": "={{$json.body.file_id}}"
      },
      "name": "Get Voice File Path",
      "type": "n8n-nodes-base.telegram",
      "typeVersion": 1,
      "position": [
        460,
        300
      ],
      "id": "get_voice_file_path",
      "credentials": {
        "telegramApi": {
          "id": "placeholder_credential_id",
          "name": "Telegram"
        }
      }
    },
    {
      "parameters": {
        "url": "=https://api.telegram.org/file/bot{{$credentials.Telegram.apiKey}}/{{$json.filePath}}",
        "response": {
          "response": {
            "format": "file"
          }
        }
      },
      "name": "Download Voice File",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 2,
      "position": [
        680,
        300
      ],
      "id": "download_voice_file"
    },
    {
      "parameters": {
        "url": "https://api.groq.com/openai/v1/audio/transcriptions",
        "authentication": "headerAuth",
        "sendBody": true,
        "body": {
          "contentType": "multipart/form-data",
          "content": {
            "fields": [
              {
                "fieldName": "model",
                "fieldValue": "whisper-large-v3"
              },
              {
                "fieldName": "language",
                "fieldValue": "he"
              }
            ],
            "binaryPropertyName": "data"
          }
        },
        "options": {}
      },
      "name": "Transcribe with Groq (Whisper)",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 2,
      "position": [
        900,
        300
      ],
      "id": "transcribe_voice_groq",
      "credentials": {
        "httpHeaderAuth": {
          "id": "placeholder_groq_credential_id",
          "name": "Groq"
        }
      }
    },
    {
      "parameters": {
        "responseCode": 200,
        "options": {}
      },
      "name": "Respond to Webhook",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [
        1120,
        300
      ],
      "id": "respond_to_webhook"
    }
  ],
  "connections": {
    "webhook-trigger": {
      "main": [
        [
          {
            "node": "get_voice_file_path",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "get_voice_file_path": {
      "main": [
        [
          {
            "node": "download_voice_file",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "download_voice_file": {
      "main": [
        [
          {
            "node": "transcribe_voice_groq",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "transcribe_voice_groq": {
      "main": [
        [
          {
            "node": "respond_to_webhook",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "active": false,
  "settings": {},
  "id": "stt-agent",
  "meta": {}
}
